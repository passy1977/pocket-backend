# Pocket Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# ======================
# DATABASE CONFIGURATION
# ======================
# Root password for MariaDB (used for database administration)
DB_ROOT_PASSWORD=your_secure_root_password_here

# Application database user credentials
DB_USERNAME=pocket_user
DB_PASSWORD=your_secure_user_password_here

# ======================
# SECURITY CONFIGURATION
# ======================
# AES CBC IV for encryption (MUST be exactly 16 characters)
# Generate with: openssl rand -base64 12 | tr -d "=+/" | cut -c1-16
AES_CBC_IV=your_16_char_iv_!

# Admin credentials for actuator endpoints
ADMIN_USER=admin
ADMIN_PASSWD=your_secure_admin_password_here

# ======================
# SERVER CONFIGURATION
# ======================
# Public URL where the server will be accessible
SERVER_URL=http://localhost:8081

# Port on which the server will listen
SERVER_PORT=8081

# Additional CORS origins (comma-separated)
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ADDITIONAL_ORIGINS=

# ======================
# JVM CONFIGURATION
# ======================
# Maximum heap size for the Java application
JVM_MAX_MEMORY=512m

# Initial heap size for the Java application
JVM_MIN_MEMORY=256m

# Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# ======================
# PRODUCTION SETTINGS
# ======================
# Uncomment and configure for production deployment

# SSL/TLS Configuration
# SSL_KEYSTORE_PASSWORD=your_keystore_password

# Database SSL Configuration
# DB_USE_SSL=true
# DB_REQUIRE_SSL=true

# Security Headers
# SECURITY_HEADERS_CSP=default-src 'self'; script-src 'self'

# Session Configuration
# SESSION_TIMEOUT=3600
# COOKIE_SECURE=true
# COOKIE_HTTP_ONLY=true
# COOKIE_SAME_SITE=strict

# ======================
# MONITORING & LOGGING
# ======================
# External log aggregation
# LOG_AGGREGATION_ENDPOINT=https://your-log-service.com

# Metrics and monitoring
# METRICS_ENABLED=true
# HEALTH_CHECK_ENABLED=true

# ======================
# BACKUP CONFIGURATION
# ======================
# Backup settings for production
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# ======================
# IMPORTANT SECURITY NOTES
# ======================
# 1. Never commit this file to version control
# 2. Generate strong passwords (use: openssl rand -base64 32)
# 3. Rotate passwords regularly in production
# 4. Use environment-specific values for different deployments
# 5. Enable SSL/TLS in production
# 6. Configure firewall rules to restrict access
# 7. Monitor logs for security events
# 8. Backup encryption keys securely